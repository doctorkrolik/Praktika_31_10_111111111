<Window x:Class="Praktika_31_10.DeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Praktika_31_10"
        mc:Ignorable="d"
        Title="DeleteWindow" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Удалить запись?" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,30,0">
            <Button x:Name="deleteWindowBtnDelete" Content="Удалить" Width="90" Height="30" Margin="0,0,10,0"/>
            <Button x:Name="deleteWindowBtnCancel" Content="Отмена" Width="90" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
